<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:m="urn:import:com.gwtmobile.ui.client.widgets">
	<ui:style>
	</ui:style>
	<g:HTMLPanel>
		<m:HeaderPanel ui:field="header" leftButton="Back">
			<g:Label>Flip Switch</g:Label>			
		</m:HeaderPanel>
		<m:ScrollPanel>
			<m:ListPanel selectable="false">
				<m:ListItem>
					<g:Label>iPhone</g:Label><m:FlipSwitch ui:field="iphone"/>
				</m:ListItem>
				<m:ListItem>
					<g:Label>Android</g:Label><m:FlipSwitch ui:field="android" value="false"/>
				</m:ListItem>
				<m:ListItem>
					<g:Label>BlackBerry</g:Label><m:FlipSwitch ui:field="blackberry"/>
				</m:ListItem>
				<m:ListItem>
					<g:Label>WebOS</g:Label><m:FlipSwitch ui:field="webos"/>
				</m:ListItem>
				<m:ListItem>
					<g:Label>WP7</g:Label><m:FlipSwitch ui:field="wp7"/>
				</m:ListItem>
			</m:ListPanel>			
		</m:ScrollPanel>
	</g:HTMLPanel>	
</ui:UiBinder> 